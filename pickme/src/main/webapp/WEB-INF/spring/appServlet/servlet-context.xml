	<bean class="org.mybatis.spring.SqlSessionFactoryBean" id="sqlSessionFactoryRepository">
		<property name="dataSource" ref="dataSource" />
		<property value="classpath:com/cafe24/pickmetop/recruit/repository/*.xml"
			name="mapperLocations" />
	</bean>
	<bean class="org.mybatis.spring.SqlSessionTemplate" id="sqlSessionRepository">
		<constructor-arg ref="sqlSessionFactoryRepository" index="0" />
	</bean> -->

</beans>
